<?xml version="1.0" ?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
	<argument name="data" xsi:type="array">
		<item name="js_config" xsi:type="array">
			<item name="provider" xsi:type="string">laurensmedia_laposte_codes_form.codes_form_data_source</item>
		</item>
		<item name="label" xsi:type="string" translate="true">General Information</item>
		<item name="template" xsi:type="string">templates/form/collapsible</item>
	</argument>
	<settings>
		<buttons>
			<button name="back" class="Laurensmedia\Laposte\Block\Adminhtml\Codes\Edit\BackButton"/>
			<button name="delete" class="Laurensmedia\Laposte\Block\Adminhtml\Codes\Edit\DeleteButton"/>
			<button name="save" class="Laurensmedia\Laposte\Block\Adminhtml\Codes\Edit\SaveButton"/>
			<button name="save_and_continue" class="Laurensmedia\Laposte\Block\Adminhtml\Codes\Edit\SaveAndContinueButton"/>
		</buttons>
		<namespace>laurensmedia_laposte_codes_form</namespace>
		<dataScope>data</dataScope>
		<deps>
			<dep>laurensmedia_laposte_codes_form.codes_form_data_source</dep>
		</deps>
	</settings>
	<dataSource name="codes_form_data_source">
		<argument name="data" xsi:type="array">
			<item name="js_config" xsi:type="array">
				<item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
			</item>
		</argument>
		<settings>
			<submitUrl path="*/*/save"/>
		</settings>
		<dataProvider name="codes_form_data_source" class="Laurensmedia\Laposte\Model\Codes\DataProvider">
			<settings>
				<requestFieldName>codes_id</requestFieldName>
				<primaryFieldName>codes_id</primaryFieldName>
			</settings>
		</dataProvider>
	</dataSource>
	<fieldset name="general">
		<settings>
			<label>General</label>
		</settings>
		<field name="code" formElement="input" sortOrder="10">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Codes</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">Start code range</label>
				<dataScope>code</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>
		<field name="end_code" formElement="input" sortOrder="15">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Codes</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">End code range</label>
				<dataScope>end_code</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>
		<field name="order_id" formElement="input" sortOrder="20">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Codes</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">order_id</label>
				<dataScope>order_id</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>
	</fieldset>
</form>
